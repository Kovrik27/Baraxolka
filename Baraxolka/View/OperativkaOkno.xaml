<Window x:Class="Baraxolka.View.OperativkaOkno"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Baraxolka"
        mc:Ignorable="d"
             Title="OperativkaOkno" Height="450" Width="800" Background="MidnightBlue">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Label Content="Название" Grid.Row="1" Style="{StaticResource Labelechka2}"/>
        <Label Content="Добавление оперативки" Grid.Column="1" Grid.ColumnSpan="2" Style="{StaticResource Labelechka}"/>
        <Label Content="Цена" Grid.Row="2" Style="{StaticResource Labelechka2}" />
        <TextBox Text="{Binding NewOperativka.Name}" Grid.Row="1" Grid.Column="1"/>
        <TextBox Text="{Binding NewOperativka.Price}" Grid.Row="2" Grid.Column="1"/>
    </Grid>
</Window>
